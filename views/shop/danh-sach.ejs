<%layout("layouts/shopLayout") %>
<div class="card shadow">
    <div class="card-body">
      <h5>Danh sách yêu thích</h5>
      <div class="">
        <nav aria-label="Page navigation">
          <ul class="pagination">
          <li class="page-item">
              <a class="page-link" href="/danh-sach-yeu-thich?page=<%= hasPrevPage ? page - 1 : page %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              </a>
          </li>
          <li class="page-item">
              <a class="page-link" href="/danh-sach-yeu-thich?page=<%= hasNextPage ? page + 1 : page %>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              </a>
          </li>
          </ul>
      </nav>
        <% for(let book of books) { %>
            <div class="card mb-2">
                <div class="card-body d-flex justify-content-between">
                  <p><%= book.title %></p>
                  <div class="">
                        <img src="<%= book.images[0].thumbnail %>" style="height: 100px; width: 75px" alt="">
                        <div class="d-flex mt-2">
                            <form action="/addlisttocart/<%= book._id %>" method="post">
                                <button class="btn btn-sm btn-success">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </button>
                            </form>
                            <div class="mx-1"></div>
                            <form action="/removelist/<%= book._id %>" method="post">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa-solid fa-delete-left"></i>
                                </button>
                            </form>
                        </div>                     
                  </div>
                </div>
              </div>
        <% } %> 
      </div>
    </div>
  </div>